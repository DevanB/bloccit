<% if comment.errors.any? %>
  <div class="alert alert-danger">
    <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
    <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [post, comment], remote: true do |f| %>
  <div class="form-group <%= error_tag(comment.errors[:body]) %>">
    <%= f.text_area :body, rows: 3, class: 'form-control', placeholder: "Enter comment" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-sm btn-success' %>
  </div>
<% end %>
